<div class=col-md-12>
  <h1 style="color:#666666" class=col-xs-offset-4>All of our cool movies </h1>
</div>
<div class=col-md-12>
  <div class="table-responsive">

    <table class="table table-striped table-hover">
      <tr class="small">
        <th>Movie Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Year Released</th>
        <th>Actions</th>
      </tr>


        <% @movies.each do |movie| %>
        <tr class="small">
          <td class="col-xs-2"><%= image_tag(movie.movie_image, :class => 'img-thumbnail img-circle img-response') unless movie.movie_image.nil? %> </td>
          <td class="col-xs-2"><strong><%= movie.name %></strong></td>
          <td class="col-xs-3"><%= movie.description %></td>
          <td class="col-xs-2"><%= movie.date_released %></td>
          <td class="col-xs-3">
            <%= link_to 'Show', movie_path(movie), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-success btn-sm' %>
            <%= link_to '  X', movie, method: :delete, data: {confirm: 'You sure homie?' } %>
          </td>
      </tr>
      <% end %>

    </table>



  </div>
</div>
