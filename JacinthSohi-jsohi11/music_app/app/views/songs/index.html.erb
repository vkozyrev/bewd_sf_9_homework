<div style="font-family: 'Open Sans', sans-serif;">
  <div class="panel panel-default panel-transparent">
  <div class="panel-heading">
    <h3 class="panel-title">All songs</h3>
  </div>
  <div class="panel-body">
<div class="col-md-12">
  <div class="row padded-bottom">
    <%=link_to "Add a song", new_song_path, class: 'btn btn-md btn-default pull-right' %>
  </div>
<table class="table">
  <tr>
    <th>Listen</th>
    <th>Title</th>
    <th>Year Released</th>
    <th>Actions</th>
  </tr>
 
  <% @songs.each do |song| %>
    <tr>
      <td class="col-md-1">
        <%= link_to "#{song.song_url}", target: "_blank" do %>
        <%= image_tag("play_icon.png", :alt => "play", width: '30', height: '30') %>
        <% end %>
      </td>
      <td class="col-md-4"><%= song.title %></td>
      <td class="col-md-1"><%= song.year_released %></td>
      <td class="col-md-2">
      	<%=link_to "Edit", edit_song_path(song), class: 'btn btn-xs btn-default' %>
      	<%=link_to "Delete", song_path(song), method: :delete, data: {confirm: "Do you really want to remove this song?"}, class: 'btn btn-xs btn-default' %>
      </td>
    </tr>
  <% end %>
</table>
</div>
</div>
</div>
</div>