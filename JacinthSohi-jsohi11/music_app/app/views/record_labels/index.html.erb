<div style="font-family: 'Open Sans', sans-serif;">
  <div class="panel panel-default panel-transparent">
  <div class="panel-heading">
    <h3 class="panel-title">All record labels</h3>
  </div>
  <div class="panel-body">
<div class="col-md-12">
	<div class="row padded-bottom">
	 <%=link_to "Add a record label", new_record_label_path, class: 'btn btn-md btn-default pull-right' %>
	</div>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
 
  <% @record_labels.each do |record_label| %>
    <tr>
      <td class="col-md-4"><%= record_label.label_name %></td>
      <td class="col-md-2">
      	<%=link_to "Learn More", record_label_path(record_label), class: 'btn btn-xs btn-primary' %>
      	<%=link_to "Edit", edit_record_label_path(record_label), class: 'btn btn-xs btn-default' %>
      	<%=link_to "Delete", record_label_path(record_label), method: :delete, data: {confirm: "Do you really want to remove this record label?"}, class: 'btn btn-xs btn-default' %>
      </td>
    </tr>
  <% end %>
</table>
</div>
</div>
</div>
</div>