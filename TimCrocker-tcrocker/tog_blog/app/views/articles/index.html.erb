<h1>Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th colspan="2"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article_path(article) %> </td>
      <td><%= link_to 'Edit', edit_article_path(article) %> </td>
    </tr>
  <% end %>
</table>

<p> <%= link_to "Create New Articles", new_articles_path %> </p>
