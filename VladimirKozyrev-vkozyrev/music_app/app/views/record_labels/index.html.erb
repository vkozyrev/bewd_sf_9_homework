<h1>Record Labels</h1>

<table class="table table-hover">
  <tr>
    <th class="text-center">Name</th>
    <th class="text-center">Edit/Remove</th>
  </tr>
  <% @record_labels.each do |record_label| %>
  <tr>
    <td class="text-center"><%= link_to "#{record_label.name}", record_label_path(record_label) %></td>
    <td class="text-center">
      <%= link_to "Edit", edit_record_label_path(record_label.id), class: "btn btn-sm btn-default" %>
      <%= link_to "Delete", record_label, method: :delete, data: { confirm: "You sure?" },  class: "btn btn-sm btn-default" %>
    </td>
  </tr>
  <% end %>
</table>
<%= link_to "New Label", new_record_label_path, class: "btn btn-primary btn-md" %>
