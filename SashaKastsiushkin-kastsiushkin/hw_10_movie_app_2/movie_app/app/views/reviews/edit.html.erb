<h1>Edit review for <%= @review.movie.title %></h1>

<%= simple_form_for @review, :html => {:class => "col-md-6 col-md-offset-3"} do |f| %>
  <%= f.input :rating, as: :select, collection: 1..5, prompt: "Select your rating" %>
  <%= f.input :review %>
  <%= f.submit "Update Review", :class => 'btn btn-primary btn-block' %>
<% end %>
