<h1>Welcome to Retflix</h1>

<% if @movies.length > 0  %>
<table class="table table-striped table-hover">
  <tr>
    <th class="col-md-2 text-center">Title</th>
    <th class="col-md-1 text-center">Released</th>
    <th class="col-md-6 text-center">Description</th>
    <th class="col-md-3 text-center"></th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to "#{movie.title}", movie_path(movie.id) %></td>
    <td class="text-center"><%= movie.date_released %></td>
    <td><%= movie.description %></td>
    <td class="text-right">
      <%= link_to "Show", movie_path(movie.id), class: "btn btn-sm btn-primary" %>
      <%= link_to "Edit", edit_movie_path(movie.id), class: "btn btn-sm btn-warning" %>
      <%= link_to "Delete", movie, method: :delete, data: { confirm: "You sure?" },  class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<div class="col-md-12">
  <p class="text-center">Add first movie!</p>
</div>
<% end %>
