<h1>Add new movie</h1>

<%= form_for @movie, :html => {:class => "form-horizontal  col-md-6 col-md-offset-3"} do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :date_released %>
  <%= f.text_field :date_released, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, size: "63x7", :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.submit 'Save', :class => 'btn btn-primary btn-block' %>
</div>
<% end %>
