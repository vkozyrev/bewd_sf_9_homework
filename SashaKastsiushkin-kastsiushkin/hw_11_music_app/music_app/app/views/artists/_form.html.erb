<%= simple_form_for @artist, :html => {:class => "col-md-6 col-md-offset-3"} do |f| %>
  <%= f.input :name %>
  <%= f.input :country, as: :text %>
  <%= f.association :record_label, method: :record_label_id, prompt: "Select a label" %>
  <%= f.submit "#{button_text}", :class => 'btn btn-primary btn-block' %>
<% end %>
