<h1>Artists</h1>

<% if @artists.length > 0  %>
<table class="table table-hover">
  <tr>
    <th class="col-md-4 text-center">Name</th>
    <th class="col-md-3 text-center">Country</th>
    <th class="col-md-3 text-center">Label</th>
    <th class="col-md-2 text-center">View/Edit/Remove</th>
  </tr>
  <% @artists.each do |artist| %>
  <tr>
    <td><%= link_to "#{artist.name}", artist_path(artist) %></td>
    <td><%= artist.country %></td>
    <td><%= artist.record_label ? artist.record_label.name : "No label" %></td>
    <td class="text-center">
      <%= link_to artist_path(artist), class: "btn btn-sm btn-default" do %>
        <i class="fa fa-eye text-primary"></i>
      <% end %>
      <%= link_to edit_artist_path(artist.id), class: "btn btn-sm btn-default" do %>
        <i class="fa fa-pencil text-success"></i>
      <% end %>
      <%= link_to artist, method: :delete, data: { confirm: "You sure?" },  class: "btn btn-sm btn-default" do %>
        <i class="fa fa-remove text-danger"></i>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
<%= link_to "Add New Artist", new_artist_path(), class: "btn btn-primary btn-lg" %>
<% else %>
<div class="col-md-12">
  <p class="text-center">No artists yet!</p>
</div>
<% end %>
