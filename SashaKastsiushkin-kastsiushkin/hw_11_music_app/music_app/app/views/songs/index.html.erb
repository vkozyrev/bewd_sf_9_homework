<h1>Songs</h1>

<% if @songs.length > 0  %>
<table class="table table-striped table-hover">
  <tr>
    <th class="col-md-3 text-center">Artist</th>
    <th class="col-md-5 text-center">Song</th>
    <th class="col-md-2 text-center">Album</th>
    <th class="col-md-2 text-center">Edit/Remove</th>
  </tr>
  <% @songs.each do |song| %>
  <tr>
    <td><%= link_to "#{song.artist.name}", artist_path(song.artist) %></td>
    <td><%= song.name %></td>
    <td><%= song.album %></td>
    <td class="text-center">
      <%= link_to edit_song_path(song.id), class: "btn btn-sm btn-default" do %>
        <i class="fa fa-pencil text-success"></i>
      <% end %>
      <%= link_to song, method: :delete, data: { confirm: "You sure?" },  class: "btn btn-sm btn-default" do %>
        <i class="fa fa-remove text-danger"></i>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<div class="col-md-12">
  <p class="text-center">No songs yet!</p>
</div>
<% end %>
